<script src="@Url.Content("~/Scripts/jquery-3.3.1.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/CreateInsurance.js")" type="text/javascript"></script>
@{
    ViewBag.Title = "CreateInsurance";
}

<h2>Create Insurance Policy</h2>
<div class="form-group">
    <label for="Name">Name: </label><input type="text" class="form-control" id="Name">
    <label for="Description">Description: </label><input type="text" class="form-control" id="Description">
    <label for="StartDate">Start Date: </label><input type="text" class="form-control" id="StartDate">
    <label for="CoveringMonths">Covering Months: </label><input type="text" class="form-control" id="CoveringMonths">
    <label for="price">Price: </label><input type="text" class="form-control" id="price">
    <label for="RiskType">Risk: </label><input type="text" class="form-control" id="RiskType">
    <label for="CoveringTypes">Covering: </label><input type="text" class="form-control" id="CoveringTypes">
    <label for="CoveringPercentage">Percentage: </label><input type="text" class="form-control" id="CoveringPercentage">
</div>
<div class="form-group">
    <button type="submit" id="PosttButton" class="btn btn-primary">Submit</button>
</div>

